# backend/Dockerfile.dev
FROM php:8.3-cli

ENV DEBIAN_FRONTEND=noninteractive

# System deps + build tools for PECL/Swoole
RUN apt-get update && apt-get install -y --no-install-recommends \
    git unzip curl ca-certificates \
    libpq-dev libzip-dev zlib1g-dev \
    libssl-dev \
    libpng-dev libjpeg-dev libfreetype6-dev \
    libxml2-dev \
    procps iproute2 psmisc \
    build-essential pkg-config \
  && docker-php-ext-configure gd --with-freetype --with-jpeg \
  && docker-php-ext-install -j"$(nproc)" pdo pdo_pgsql zip sockets pcntl gd \
  && rm -rf /var/lib/apt/lists/*

# Install Composer (PHAR) without apt
RUN curl -fsSL https://getcomposer.org/installer -o /tmp/composer-setup.php \
  && php /tmp/composer-setup.php --install-dir=/usr/local/bin --filename=composer --2 \
  && rm -f /tmp/composer-setup.php \
  && composer --version

# Swoole for Octane
RUN pecl install swoole && docker-php-ext-enable swoole

WORKDIR /var/www/html

EXPOSE 8787
